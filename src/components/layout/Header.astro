---
import { themeConfig } from '@/config'
import ThemeToggle from '@/components/ui/ThemeToggle.astro'
---

<header>
  <nav>
    <img
      src="/logo/heavymedl.png"
      alt={themeConfig.site.title}
      class="logo"
      loading="eager"
      decoding="async"
    />
    <ThemeToggle />
  </nav>
</header>
<style>
  header {
    margin: 0;
  }
  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .logo {
    display: block;
    height: auto;
    margin: 0 auto;
    width: clamp(17rem, 34vw, 30rem);
  }
</style>
