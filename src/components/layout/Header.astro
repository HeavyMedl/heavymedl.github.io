---
import { themeConfig } from '@/config'
import ThemeToggle from '@/components/ui/ThemeToggle.astro'
import SocialLinks from '@/components/ui/SocialLinks.astro'
---

<header>
  <nav>
    <div class="theme-toggle-wrapper">
      <ThemeToggle />
    </div>
    <div class="brand">
      <a href="/" aria-label={themeConfig.site.title}>
        <img
          src="/logo/heavymedl.png"
          alt={themeConfig.site.title}
          class="logo"
          loading="eager"
          decoding="async"
        />
      </a>
      <SocialLinks variant="vaporwave-solid-end" />
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0;
  }
  nav {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 0.75rem;
  }
  .theme-toggle-wrapper {
    align-self: flex-end;
  }
  .brand {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .logo {
    width: clamp(17rem, 34vw, 30rem);
    height: auto;
  }
</style>
